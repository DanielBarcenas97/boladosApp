<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoladosApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="button_filled" parent="@style/Widget.Material3.Button">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_layout_normal" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/oswald_regular</item>
        <item name="endIconMode">custom</item>
        <item name="errorEnabled">true</item>
        <item name="helperText">""</item>
        <item name="helperTextEnabled">true</item>
    </style>








</resources>